@article{Sun2007,
abstract = {We experimentally demonstrate the optical transmission at 1550 nm of the fundamental slot modes (quasi-TM modes) in horizontal single and multiple slot waveguides and ring resonators consisting of deposited amorphous silicon and silicon dioxide. We demonstrate that the horizontal multiple slot configuration provides enhanced optical confinement in low index slot regions compared to a horizontal single slot structure with the same total SiO2 layer thickness by comparing their thermo-optic coefficients for the horizontal slot ring resonators. We show in these early structures that horizontal slot waveguides have low propagation loss of 6 approximately 7 dB/cm. The waveguide loss is mainly due to a-Si material absorption. The addition of a-Si/SiO(2) interfaces does not introduce significant scattering loss in a horizontal multiple slot waveguide compared to a horizontal single slot waveguide.},
author = {Sun, Rong and Dong, Po and Feng, Ning-ning and Hong, Ching-yin and Michel, Jurgen and Lipson, Michal and Kimerling, Lionel},
doi = {10.1364/OE.15.017967},
file = {:media/gianluca/WD-GREEN1TB/Dropbox/UNIPD/MAGISTRALE/SECONDO ANNO/PRIMO SEMESTRE/Photonics Devices - M. Santagiustina/project/Horizontal single and multiple slot waveguides optical transmission at 1550 nm.pdf:pdf},
isbn = {1094-4087 (Electronic)$\backslash$n1094-4087 (Linking)},
issn = {1094-4087},
journal = {Optics express},
number = {26},
pages = {17967--17972},
pmid = {19551093},
title = {{Horizontal single and multiple slot waveguides: optical transmission at lambda = 1550 nm.}},
volume = {15},
year = {2007}
}
@article{Benson2011,
abstract = {The assembly of hybrid nanophotonic devices from different fundamental photonic entities--such as single molecules, nanocrystals, semiconductor quantum dots, nanowires and metal nanoparticles--can yield functionalities that exceed those of the individual subunits. Combining these photonic elements requires nanometre-scale fabrication precision and potentially involves a material diversity that is incompatible with standard nanotechnological processes. Although merging these different systems on a single hybrid platform is at present challenging, it promises improved performance and novel devices. Particularly rapid progress is seen in the combination of plasmonic-dielectric constituents with quantum emitters that can be assembled on demand into fundamental model systems for future optical elements.},
author = {Benson, Oliver},
doi = {10.1038/nature10610},
file = {:home/gianluca/Unipd/Photonics Devices - M. Santagiustina/project/benson2011.pdf:pdf},
