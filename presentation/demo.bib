journal = {Nature},
number = {7376},
pages = {193--199},
pmid = {22158243},
publisher = {Nature Publishing Group},
title = {{Assembly of hybrid photonic architectures from nanophotonic constituents}},
url = {http://dx.doi.org/10.1038/nature10610},
volume = {480},
year = {2011}
}
